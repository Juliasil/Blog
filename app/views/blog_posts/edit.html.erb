<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= link_to "Edit", edit_blog_post_path(@blog_post) if user_signed_in? %>
      <h1 class="text-center" >Editar blog post</h1>
      <%= render partial: "form", locals: {blog_post: @blog_post} %>
      <%= button_to "Delete", @blog_post, method: :delete, data:{turbo_confirm: "Tem certeza?"}, class: " btn btn-outline-danger btn-sm mt-2 " %>
    </div>
  </div>
</div>